{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

    <table class="table">
    <thead>
        <tr>
        <th scope="col">ID</th>
        <th scope="col">TITLE</th>
        <th scope="col">DESCRIPTION</th>
        </tr>
    </thead>
    <tbody>
        {% for course in courses%}
        <tr>
        <th scope="row">{{course.id}}</th>
        <td>{{course.title}}</td>
        <td>{{course.description}}</td>
        </tr>
        {% endfor %}
        
    </tbody>
    </table>
{% endblock %}
